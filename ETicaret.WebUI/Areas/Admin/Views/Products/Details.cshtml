@model ETicaret.Core.Entities.Product

@{
    ViewData["Title"] = "Duyuru Detayları";
}
<div class="card p-4 mb-4 shadow-sm"> 
    <hr />
    <dl class="row">
        <dt class="col-sm-3 text-muted">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-9">
            <img src="/Img/Product/@Model.Image" height="75" />
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.IsHome)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.IsHome)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.OrderNo)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.OrderNo)
        </dd>
    </dl>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2"> 
        <i class="fas fa-edit"></i> Düzenle
    </a>
    <a asp-action="Index" class="btn btn-secondary"> 
        <i class="fas fa-arrow-left"></i> Listeye Geri Dön
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
