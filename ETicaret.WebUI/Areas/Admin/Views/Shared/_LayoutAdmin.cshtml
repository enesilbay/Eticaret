<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETicaret.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Main" asp-action="Index">Admin Paneli</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="Main" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Admin/AppUsers">
                                <i class="fa-solid fa-user"></i>Kullanıcılar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Admin/Addresses">
                                <i class="fa-solid fa-user"></i>Adresler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Admin/Brands">
                                <i class="fa-regular fa-copyright"></i>Markalar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Admin/Categories">
                                <i class="fa-solid fa-list"></i>Kategoriler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Admin/Products">
                                <i class="fa-solid fa-barcode"></i>Ürünler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Admin/News">
                                <i class="fa-solid fa-bullhorn"></i>Duyurular</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Admin/Contacts">
                                <i class="fa-regular fa-comments"></i>İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Admin/Sliders">
                                <i class="fa-solid fa-layer-group"></i>Slider</a>
                        </li>

                       @*  <a class="nav-link" href="/Admin/AppUsers">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-users"></i></div>
                                Kullanıcı Yönetimi
                                </a> *@
                    </ul>
                    
                    <ul class="navbar-nav ms-auto">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-light" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-user-circle"></i> Admin
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="#!">Ayarlar</a></li>
                <li><a class="dropdown-item" href="#!">Log Kayıtları</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="/Account/SignOut">Çıkış Yap</a></li>
                
            </ul>
        </li>
    </ul>
    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Admin Paneli
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>