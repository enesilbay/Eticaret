@using ETicaret.WebUI.ExtensionMethods
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">

            <!-- Logo -->
            <a class="navbar-brand fw-bold me-4" asp-area="" asp-controller="Home" asp-action="Index">
                ETicaret.WebUI
            </a>

            <!-- Kategoriler -->
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-2">
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Index">Anasayfa</a>
                    </li>
                    @await Component.InvokeAsync("Categories")
                    <li class="nav-item">
                        <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="ContactUs">İletişim</a>
                    </li>
                </ul>
            </div>

            <!-- Arama Kutusu (küçük) -->
            <form action="/Products" class="d-flex me-auto" style="width: 250px;">
                <input name="q" type="search" class="form-control form-control-sm rounded-pill" placeholder="Ara...">
            </form>

            <!-- Sağ Menü -->
            <div class="d-flex align-items-center">

                <!-- Sepet -->
                @{
                    var cart = Context.Session.GetJson<ETicaret.Service.Concrete.CartService>("Cart");
                    int totalItems = cart?.CartLines.Sum(c => c.Quantity) ?? 0; 
                }
                @if (cart != null && cart.CartLines.Count > 0)
                {
                    <div class="dropdown me-3">
                        <a class="nav-link position-relative" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-cart-fill fs-5"></i>
                            @if(totalItems > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @totalItems
                                </span>
                            }
                            <span class="ms-1">Sepet</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end p-2">
                            @foreach (var item in cart.CartLines)
                            {
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/Products/Details/@item.Product.Id">
                                        <img src="/Img/Product/@item.Product.Image" alt="" height="40" class="me-2" />
                                        <span>@item.Product.Name</span>
                                    </a>
                                </li>
                            }
                            <li class="text-center mt-2">
                                <a class="btn btn-warning btn-sm" href="/Cart">Sepete Git</a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="nav-link position-relative me-3" href="/Cart">
                        <i class="bi bi-cart fs-5"></i>
                        <span class="ms-1">Sepet</span>
                    </a>
                }

                <!-- Hesap -->
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-person-fill fs-5"></i>
                            <span class="ms-1">Hesabım</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Favorites">Favorilerim</a></li>
                            <li><a class="dropdown-item" href="/Account">Kullanıcı Bilgilerim</a></li>
                            <li><a class="dropdown-item" href="/MyAddresses">Kayıtlı Adreslerim</a></li>
                            <li><a class="dropdown-item" href="/Account/MyOrders">Siparişlerim</a></li>
                            @*<li><a class="dropdown-item" href="/Account">Değerlendirmelerim</a></li>*@
                            <li class="text-center"><a class="btn btn-danger btn-sm" href="/Account/SignOut">Oturumu Kapat</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-person fs-5"></i>
                            <span class="ms-1">Giriş Yap</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Account/SignIn">Giriş Yap</a></li>
                            <li><a class="dropdown-item" href="/Account/SignUp">Kayıt Ol</a></li>
                        </ul>
                    </div>
                }
            </div>

        </div>
    </nav>
</header>
