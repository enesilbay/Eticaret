@model Contact
@{
    ViewData["Title"] = "ContactUs";
}
<div class="text-center">
    <h1 class="display-4">İletişim</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ContactUs">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Gönder" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-8">
        <h5>Bize Ulaşın</h5>
        <iframe
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3007.1426286516626!2d28.9601730755181!3d41.08773021452971!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b55c73ffffffff%3A0xfebb7693421f852c!2zxLBTS8SwIEdlbmVsIE3DvGTDvHJsw7zEn8O8!5e0!3m2!1str!2str!4v1755257471775!5m2!1str!2str"
    width="100%"
    height="350"
    style="border: 0;"
    allowfullscreen
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade">
</iframe>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
