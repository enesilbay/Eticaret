@model CartViewModel
@{
	ViewData["Title"] = "Sepetim";
}
<section class="container my-5">	
<div class="text-center">
    <h1 class="display-4">Sepetim</h1>
</div>
<div class="row">
	<div class="col-md-10">
		<div class="table-responsive">
			@if (Model.CartLines.Any())
						{
			<table class="table table-striped table-hover">
				<tr>
					<th></th>
					<th>Ürün</th>
					<th>Fiyat</th>
					<th>Miktar</th>
					<th>Toplam</th>
					<th></th>
				</tr>
				<tbody>
						
							@foreach (var item in Model.CartLines)
							{
								<tr>
									<td>
										<img src="/Img/Product/@item.Product.Image" alt="" height="37" />
									</td>
									<td>
										<a class="nav-link text-dark" href="/Products/Details/@item.Product.Id">
											@item.Product.Name
										</a>
									</td>
									<td>
										@item.Product.Price.ToString("c")
									</td>
									<td>	
										@item.Quantity
									</td>
									<td>	
										@((item.Quantity * item.Product.Price).ToString("c"))
									</td>
									<td>
										 <form asp-action="Remove"  asp-controller="Favorites"> 
											<input type="hidden" name="ProductId" value="@item.Id" />
											 <button class="btn btn-sm btn-danger" type="submit">
												<i class="bi-x-lg"> </i>
											 </button>
										</form>
									</td>
								</tr>
							}
						
					</tbody>
					</table>
				}
				else
				{
									<div class="container ">
					<div class="alert alert-warning my-5">
						<h3>Sepetinizde Ürün Bulunmamaktadır!</h3>
					</div>
				</div>
				}
		</div>
	</div>
</div>
</section>