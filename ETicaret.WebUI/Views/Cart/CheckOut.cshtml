@model CheckOutViewModel
@{
	ViewData["Title"] = "Satın Al";
}
<section class="container my-5">	
<div class="text-center">
    <h1 class="display-4">Satın AL</h1>
</div>
<div class="row">
	@if (Model.CartProducts.Any())
						{
	<div class="col-md-8">
		<div class="table-responsive">
			
			<table class="table table-striped table-hover">
				<tr>
					<th></th>
					<th>Ürün</th>
					<th>Fiyat</th>
					<th>Miktar</th>
					<th>Toplam</th>
					<th></th>
				</tr>
				<tbody>
						
							@foreach (var item in Model.CartProducts)
							{
								<tr>
									<td>
										<img src="/Img/Product/@item.Product.Image" alt="" height="37" />
									</td>
									<td>
										<a class="nav-link text-dark" href="/Products/Details/@item.Product.Id">
											@item.Product.Name
										</a>
									</td>
									<td>
										@item.Product.Price.ToString("c")
									</td>
									<td>	
										@item.Quantity
									</td>
									<td>	
										@((item.Quantity * item.Product.Price).ToString("c"))
									</td>
									<td>
										 <form asp-action="Remove"  asp-controller="Cart"> 
											<input type="hidden" name="ProductId" value="@item.Product.Id" />
											 <button class="btn btn-sm btn-danger" type="submit">
												<i class="bi-x-lg"> </i>
											 </button>
										</form>
									</td>
								</tr>
							}
						
					</tbody>
					</table>
				
		</div>
	</div>
	@*diğer tablo*@
	<div class="col-md-4">
		<div>
			<h4>Sepet Toplamı</h4>
		</div>
		<table class="table">
			<tr>
				<td>Ara Toplam</td>
				<td>
					@Model.TotalPrice.ToString("c")
				</td>
			</tr>
			<tr>
				<td>Kargo Ücreti</td>
				<td>
					@(Model.TotalPrice > 9999 ? "Ücretsiz" :Model.CartProducts.Any() ? "99₺" : "0₺" )
				</td>
			</tr>
			<tr>
				<th>Sipariş Toplamı</th>
				<td>
					@(Model.TotalPrice > 9999 ? Model.TotalPrice.ToString("c") : 
					(Model.CartProducts.Any() ? Model.TotalPrice+99 : Model.TotalPrice.ToString("c") ))
				</td>
			</tr>
		</table>
	</div>
	}
				else
				{
									<div class="container ">
					<div class="alert alert-warning my-5">
						<h3>Sepetinizde Ürün Bulunmamaktadır!</h3>
					</div>
				</div>
				}
</div>
</section>