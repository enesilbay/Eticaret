@model IEnumerable<Address>

@{
    ViewData["Title"] = "Adres Yönetimi"; 
}
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-user-plus"></i> Yeni Adres Ekle
    </a>
</div>

<div class="table-responsive"> 
    <table class="table table-striped table-hover table-bordered"> 
        <thead class="table-dark">
            <tr>
                <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBillingAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeliveryAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBillingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeliveryAddress)
            </td>
            <td>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"> Sil </a>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"> Düzenle </a>  
            </td>
        </tr>
}
    </tbody>
</table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}